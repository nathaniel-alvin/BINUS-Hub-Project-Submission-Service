{
  "openapi":"3.0.3",
  "info": {
    "title":"Project/Submission Service API Specifications",
    "version":"1.0.2",
    "description": "This spec lists all available endpoints related to the project service.\n\n(v1.0.2):\n- New parameter named assignment-id added (for lecturer service)\n- members replaced by members-id (using account id instead of using their names)\n- instructor replaced by instructor-id (using account id instead of using their names)\n\n(v1.0.1):\n- New parameter thumbnail added to projects.",
    "contact": {
      "name": "Alifsyah Rizky Sutarjadi",
      "email": "alifsyah.sutarjadi@binus.ac.id"
    }
  },
  "servers": [
    {
      "url": "https://{subdomain}.yourawsdomain.yourtld/api/v1",
      "description": "AWS",
      "variables": {
        "subdomain":{
          "enum": ["dev","prod"],
          "default": "dev"
        }
      }
    },
    {
      "url": "https://{subdomain}.yourgcpdomain.anothertld/api/v1",
      "description": "GCP",
      "variables": {
        "subdomain":{
          "enum": ["dev","prod"],
          "default": "dev"
        }
      }
    }
  ],
  "tags": [
    {"name": "Query","description": "All endpoints related to query projects"},
    {"name": "Create","description": "All endpoints related to creating projects"}
  ],
  "paths": {
    "/projects":{
      "get":{
        "security": [
          {
            "Authorization": []
          }
        ],
        "tags": ["Query"],
        "summary": "Get all projects",
        "responses": {
          "200":{
            "description": "Projects to be returned",
            "content": {
              "application/json":{
                "example": [
                  {
                    "project-id":"530fea",
                    "assignment-id": "u32br",
                    "title": "EducationApp",
                    "members-id": ["y4isj","p23jr"],
                    "score": 90,
                    "instructor-id": "l4jyu",
                    "course-code": "COMP6703001",
                    "date-submitted": "2022-06-13T15:24:54+07:00",
                    "file": "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
                    "thumbnail": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                  },
                  {
                    "project-id":"4427b0",
                    "assignment-id": "e34cf",
                    "title": "Gaming Peripheral Store Database Interface",
                    "members-id": ["y4isj","b23kd", "pe341"],
                    "score": 92,
                    "instructor-id": "9eo4b",
                    "course-code": "ISYS6169001",
                    "date-submitted": "2022-01-13T13:15:21+07:00",
                    "file": "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
                    "thumbnail": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                  }
                ]
              }
            }
          }
        }
      },
      "post":{
        "security": [
          {
            "Authorization": []
          }
        ],
        "tags": ["Create"],
        "summary": "Post new projects",
        "description": "This endpoint is used for uploading a project.",
        "requestBody": {
          "required": true,
          "description": "Request body to upload projects",

          "content": {
            "application/json":{
              "schema":{
                "$ref": "#/components/schemas/Project"
              },
              "example": [
                    {
                      "title": "Binus Hub Project Service",
                      "assignment-id": "h7d23",
                      "members-id": ["y4isj","a4ifs", "kl23a"],
                      "score": 100,
                      "instructor-id": "o23hd",
                      "course-code": "COMP6705001",
                      "date-submitted": "2023-01-09T00:13:32+07:00",
                      "file": "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
                      "thumbnail": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                    }
                  ]
            }
          }
        },
        "responses": {
          "200":{
            "description": "Projects are created",
            "content": {
              "application/json":{
                "example":{
                  "message": "Project successfully created."
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Authorization": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Please enter the access token."
      }
    },
    "schemas": {
      "Project":{
        "type": "object",
        "required": ["title", "assignment-id", "members-id", "score", "instructor-id", "course-code", "file","thumbnail"],
        "properties": {
          "title": {
            "type":"string",
            "minLength": 1
          },
          "assignment-id": {
            "type": "string",
            "minLength": 1
          },
          "members-id": {
            "type":"array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "score": {
            "type": "number"
          },
          "instructor-id": {
            "type": "string",
            "minLength": 1
          },
          "course-code": {
            "type": "string",
            "minLength": 1
          },
          "date-submitted": {
            "type": "string",
            "minLength": 1
          },
          "file": {
            "type": "string",
            "minLength": 1
          },
          "thumbnail": {
            "type": "string",
            "minLength": 1
          }
        }
        
      }
    }
  }
}